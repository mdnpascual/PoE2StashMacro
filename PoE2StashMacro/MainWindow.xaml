<Window x:Class="PoE2StashMacro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoE2StashMacro"
        mc:Ignorable="d"
        Title="PoE2Macro" Height="331" Width="431">
    <Grid>
        <Button x:Name="StartBtn" Content="Start Listening" Width="150" Height="50" Click="StartBtn_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <Label x:Name="MousePosLbl" Content="Mouse Position: X=0, Y=0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,81,0,0"/>

        <Label Content="Monitor to track:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="64,0,0,120"/>
        <ComboBox x:Name="MonitorComboBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Margin="177,0,0,122" SelectionChanged="MonitorComboBox_SelectionChanged"/>

        <StackPanel Height="300" Margin="-10,0,0,0" Orientation="Horizontal">
            <CheckBox x:Name="IsQuadCheckBox" Content="Quadtab" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,69,0,0" Checked="CheckBox_Checked"/>
            <CheckBox x:Name="IsMapTab" Content="Maptab" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,69,0,0" Checked="CheckBox_Checked"/>
            <CheckBox x:Name="DisengageSkill" Content="Disengage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,69,0,0" Checked="CheckBox_Checked"/>
        </StackPanel>
    </Grid>
</Window>